{{ csrf_input() | raw }}

<div class="row">
    <div class="col-md-6">
        {{ field('name', item.name, "Titre de l'article") }}
    </div>
    <div class="col-md-6">
        {{ field('category_id', item.category_id, "Catégorie", {options: categories}) }}
    </div>
    <div class="col-md-4">
        {% if item.image %}
            <img src="{{ post.thumb }}" alt="" style="width:100%">
        {% endif %}
    </div>
    <div class="col-md-4">
        {{ field('image', item.slug, "Image", {Type: 'file'}) }}
    </div>
    <div class="col-md-4">
        {{ field('slug', item.slug, "Lien") }}
    </div>
</div>
{{ field('content', item.content, "Content", {Type : 'textarea'}) }}
{{ field('created_at', item.created_at, "Date de création", {class: "datepicker"}) }}
